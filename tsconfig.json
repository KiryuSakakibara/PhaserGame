{
    "compilerOptions": {
        "target": "ES6",
        "allowJs": true,
        "module": "commonjs",
        "skipLibCheck": false,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowUnreachableCode": false,
        "paths": {
            "*": ["node_modules/*"]
        },
        "types": ["node", "./src/plugin.d.ts"]
    },
    "include": ["src/**/*"]
}